<?xml version="1.0"?>
<!-- HIS NAME WAS ZODE -->
<game>

  <blocksize>50</blocksize> <!--Distance units per tile-->
  <tilesize>40</tilesize> <!--Size of tiles in pixels-->

  <level>level5.xml</level>
  <level>level4.xml</level>
